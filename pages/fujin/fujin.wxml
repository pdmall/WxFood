<!-- 顶部搜索部分 -->
<view>
  <view class="mgLeft30 w690 h120 lh120 psnR">
    <!-- 搜索输入框 -->
    <view class="fl w690 h80 fs30 bg-eee mgTop20 bRadius20">
      <input class="w550 h80 fs30 mgLeft60 " maxlength='30' placeholder='请输入关键字' bindinput='checkVal'></input>
    </view>
    <!-- 放大镜图片 -->
    <image class="w36 h36 psnA top45 left15 {{sfxs==true?'db':'dn'}}" src="{{searchImg}}"></image>
    <view class="h60 lh60 w60  psnA fc-feaa32 fs30 top30 right20">搜索</view>
  </view>
</view>
<!--排序 -->
<!--排序 -->
<view class=" " bindtap='showOtherTuangou'>
  <view class="h80 lh80  wth33 fl tc fs30 fc-666 {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">附近
    <image class="w30 h30 mgLeft10 mgTop10 trans90" src="{{rightImg}}"></image>
  </view>
  <view class="h80 lh80  wth33 fl tc fs30 fc-666 {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">美食
    <image class="w30 h30 trans90" src="{{rightImg}}"></image>
  </view>
  <view class="h80 lh80  wth33 fl tc fs30 fc-666 {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">智能排序
    <image class="w30 h30 trans90" src="{{rightImg}}"></image>
  </view>
</view>

<block wx:if="{{ifshow==true}}">

  <swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
    <swiper-item>
      <view>附近(智能范围内</view>
      <view> >500米</view>
      <view>1000米</view>
      <view>2000米</view>
    </swiper-item>
    <swiper-item>
      <view>美食(智能范围内）</view>
      <view>小吃快餐</view>
      <view>火锅</view>
      <view>川菜</view>
    </swiper-item>
    <swiper-item>
      <view>智能排序</view>
      <view>离我最近</view>
      <view>评价最好</view>
      <view>价位最高</view>
    </swiper-item>
  </swiper>
</block>
<view class="clearB">
</view>

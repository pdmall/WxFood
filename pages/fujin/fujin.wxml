<view class="w690 mgLeft30 btmLine-ccc"></view>
<block wx:for="{{paix}}" wx:for-item="v" wx:key="index">
  <view class='h60 lh60   w690 mgLeft30 fs26 btmLine-ccc ' style='display:{{dispaly}}'>{{xq}}</view>
</block>

<block wx:for="{{shopData}}" wx:for-item="v" wx:key="index">
  <view class="h5 bg-eee {{index==0?'dn':'db'}}"></view>
  <!-- 店家列表 -->
  <view class="w690 h310 mgTop30 mgLeft30">

    <!-- 店家图片 -->
    <view class="h310 w175 fl" data-url="{{v.url}}" data-id="{{v.id}}" bindtap='shopInfo'>
      <image class="w145 h145 bg-000" src="{{v.sPhoto}}"></image>
    </view>

    <!-- 店家信息 -->
    <view class="fl w515 h310 ">
      <view class="fontB fs30" data-url="{{v.url}}" data-id="{{v.id}}" bindtap='shopInfo'>{{v.sName}}</view>
      <view class="">
        <block wx:for="{{starNum}}" wx:key="index">
          <image class="w40 h40 {{index>0?'mgLeft5':''}}" src="{{v.sLevel>item*2? v.sLevel>item*2+1? serverFull : serverHalf : serverNo}}"></image>
        </block>
        <text class="fs26 mgLeft30">¥{{v.sAverage}}/人</text>
      </view>
      <view class="fc-666 fs26">
        {{v.place}}
        <text decode="true" space="{{true}}">&nbsp;&nbsp;四川火锅</text>
        <text class="fr">{{v.sDistance}}m</text>
      </view>

      <view class="w515 btmLine-ccc mgTop10"></view>
      <!-- 卷、团 -->
      <view class="h60 mgTop10">
        <view class="w40 h40 lh40 fs30 fl fc-fff bg-feaa32 tc mgTop10">卷</view>
        <block wx:for="{{conpon}}" wx:for-item="k" wx:key="index">
          <view class="w250 tc  mgLeft60 p0" wx:if="{{k.conp}}>3">
            <text class="fc-666 fs26  p0" hidden='{{oneShow}}' bindtap='checkMore'>{{k.conp[0]}}</text>
            <block wx:for="{{k.conp}}" wx:for-item="item" wx:key="index">
              <text class="fc-666 fs26   p0" hidden='{{twoShow}}' bindtap='closeMore'>{{item}}</text>
            </block>
          </view>
        </block>
      </view>
      <view class="h60 ">
        <view class="w40 h40 lh40 fs30 fl fc-fff bg-ff6633 tc mgTop10">团</view>
        <block wx:for="{{conpon2}}" wx:for-item="k" wx:key="index">
          <view class="w250 tc mgLeft60 p0" wx:if="{{k.conp2}}>3">
            <text class="fc-666 fs26  p0" hidden='{{threeShow}}' bindtap='checkMoreT'>{{k.conp2[0]}}</text>
            <block wx:for="{{k.conp2}}" wx:for-item="item" wx:key="index">
              <text class="fc-666 fs26  p0" hidden='{{fourShow}}' bindtap='closeMoreT'>{{item}}</text>
            </block>
          </view>
        </block>
      </view>
    </view>
  </view>
</block>
